{
    "name": "kntista-back",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "lint": "bun run eslint --fix .",
        "format": "bun run --bun prettier . --write --ignore-path ../.gitignore",
        "dev": "bun run --bun --env-file ../.env react-router dev",
        "build": "bun run --bun nest build",
        "start": "bun run --bun nest start",
        "start:dev": "bun run --bun nest start --watch",
        "start:debug": "bun run --bun nest start --debug --watch",
        "start:prod": "bun run --bun dist/src/main"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.1",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-fastify": "^11.1.11",
        "@nestjs/swagger": "^11.2.3",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.7",
        "@typescript-eslint/parser": "^8.51.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "globals": "^16.0.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.3.0",
        "source-map-support": "^0.5.21",
        "swc-loader": "^0.2.6",
        "ts-loader": "^9.5.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    }
}
