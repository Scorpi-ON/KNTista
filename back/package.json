{
    "name": "kntista-back",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "lint": "bun run eslint --fix .",
        "typecheck": "bun run --bun tsc -p tsconfig.json --noEmit",
        "format": "bun run --bun prettier . --write --ignore-path ../.gitignore",
        "build": "bun run --bun nest build",
        "start": "bun run --bun nest start",
        "start:dev": "bun run --bun nest start --watch",
        "start:debug": "bun run --bun nest start --debug --watch",
        "start:prod": "bun run --bun ./dist/main.js",
        "db:gen": "bun run --bun --env-file ../.env prisma generate",
        "db:push": "bun run --bun --env-file ../.env prisma db push",
        "db:seed": "bun run --bun --env-file ../.env ./src/seed/seed.ts",
        "postinstall": "bun run db:gen"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.12",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.12",
        "@nestjs/platform-express": "^11.1.12",
        "@nestjs/swagger": "^11.2.5",
        "@prisma/adapter-pg": "^7.3.0",
        "@prisma/client": "^7.3.0",
        "@thallesp/nestjs-better-auth": "^2.2.5",
        "better-auth": "^1.4.18",
        "docxtemplater": "^3.67.6",
        "graphql": "^16.12.0",
        "joi": "^18.0.2",
        "nestjs-joi": "^1.12.0",
        "pizzip": "^3.2.0",
        "prisma": "^7.3.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.2",
        "@nestjs/cli": "^11.0.16",
        "@nestjs/schematics": "^11.0.9",
        "@swc/cli": "^0.7.10",
        "@swc/core": "^1.15.11",
        "@types/node": "^25.1.0",
        "@typescript-eslint/parser": "^8.54.0",
        "eslint": "^9.39.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^17.3.0",
        "prettier": "^3.8.1",
        "prettier-plugin-organize-imports": "^4.3.0",
        "source-map-support": "^0.5.21",
        "swc-loader": "^0.2.7",
        "ts-loader": "^9.5.4",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.54.0"
    }
}
