{
    "name": "kntista-back",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "lint": "bun run eslint --fix .",
        "typecheck": "bun run --bun tsc -p tsconfig.json --noEmit",
        "format": "bun run --bun prettier . --write --ignore-path ../.gitignore",
        "dev": "bun run --bun --env-file ../.env react-router dev",
        "build": "bun run --bun nest build",
        "start": "bun run --bun nest start",
        "start:dev": "bun run --bun nest start --watch",
        "start:debug": "bun run --bun nest start --debug --watch",
        "start:prod": "bun run --bun ./dist/main.js",
        "db:gen": "bun run --bun --env-file ../.env prisma generate",
        "db:push": "bun run --bun --env-file ../.env prisma db push",
        "db:seed": "bun run --bun --env-file ../.env ./src/seed/seed.ts",
        "postinstall": "bun run db:gen"
    },
    "dependencies": {
        "@fastify/static": "^9.0.0",
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-fastify": "^11.1.11",
        "@nestjs/swagger": "^11.2.3",
        "@prisma/adapter-pg": "^7.2.0",
        "@prisma/client": "^7.2.0",
        "@thallesp/nestjs-better-auth": "^2.2.0",
        "better-auth": "^1.4.10",
        "docxtemplater": "^3.67.6",
        "joi": "^18.0.2",
        "nestjs-joi": "^1.12.0",
        "pizzip": "^3.2.0",
        "prisma": "^7.2.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@eslint/compat": "^2.0.0",
        "@nestjs/cli": "^11.0.0",
        "@nestjs/schematics": "^11.0.0",
        "@swc/cli": "^0.7.9",
        "@swc/core": "^1.15.8",
        "@types/express": "^5.0.0",
        "@types/node": "^22.10.7",
        "@typescript-eslint/parser": "^8.51.0",
        "eslint": "^9.18.0",
        "eslint-config-prettier": "^10.0.1",
        "globals": "^16.0.0",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.3.0",
        "source-map-support": "^0.5.21",
        "swc-loader": "^0.2.6",
        "ts-loader": "^9.5.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.20.0"
    }
}
